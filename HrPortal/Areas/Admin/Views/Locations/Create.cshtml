@model HrPortal.Models.Location

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Konum Oluştur</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="UpdatedBy" />
            <input type="hidden" asp-for="UpdateDate" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentLocationId" class="control-label"></label>
                <select asp-for="ParentLocationId" class ="form-control selectpicker" asp-items="ViewBag.ParentLocationId">
                <option value="">Üst Konum Seçiniz</option>
                </select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Yeni Oluştur" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
