                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label asp-for="MapLat" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="MapLat" class="form-control" placeholder="MapLat giriniz" name="" >
                                    </div>
                                    <span asp-validation-for="MapLat" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="MapLng" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="MapLng" class="form-control" placeholder="MapLng giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="MapLng" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label asp-for="Fax" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="Fax" class="form-control" placeholder="Fax no giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="Phone" class="form-control" placeholder="Telefon No nuzu lütfen buraya giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label asp-for="Email" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input asp-for="Email" class="form-control" placeholder="E-mail adresinizi lütfen buraya giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label asp-for="Address" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <textarea asp-for="Address" class="form-control" rows="3" style="width:99.9%" placeholder="Adress bilgilerinizi lütfen buraya giriniz."></textarea>
                                    </div>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                           
                            </div>

                        </form>

                    </div>
                </div>
            </div>
         </div>
        <div class="col-md-1"> </div>
     </div>



    <br />

    <h5>E-posta Ayarları</h5>
    <hr width="100%" size="2" />

    <br />


    <div class="row">
        <div class="col-md-1"> </div>
        <div class="col-md-10">
            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <div class="panel panel-default well">
                    <div class="panel-body">
                        <form class="form-horizontal track-event-form bv-form" novalidate="novalidate">

                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label asp-for="SmtpUserName" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="SmtpUserName" class="form-control" placeholder="Kullanıcı adını buraya giriniz" name="">
                                    </div>
                                    <span asp-validation-for="SmtpUserName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="SmtpPassword" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="SmtpPassword" class="form-control" placeholder="Kullanıcı sifresini buraya giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="SmtpPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label asp-for="SmtpHost" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="SmtpHost" class="form-control" placeholder="Değeri buraya giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="SmtpHost" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="SmtpPort" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-database"></i>
                                        </div>
                                        <input asp-for="SmtpPort" class="form-control" placeholder="Değeri buraya giriniz" name="" type="text">
                                    </div>
                                    <span asp-validation-for="SmtpPort" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    
                                    <div class="input-group">
                                       
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="SmtpSSLEnabled" /> @Html.DisplayNameFor(model => model.SmtpSSLEnabled)
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"> </div>
    </div>


