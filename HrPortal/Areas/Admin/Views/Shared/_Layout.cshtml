<body style="background-image:url(/maruti/img/background.png)">

 
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="" asp-action="Index">HR Portal</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    <li><a asp-controller="" asp-action="Index"></i>Ana Sayfa</a></li>
                    <li><a asp-controller="Jobs" asp-action="Index">İş İlanları @*<span class="sr-only">(current)</span>*@</a></li>
                    <li><a asp-controller="Resumes" asp-action="Index">Özgeçmişler</a></li>
                    <li><a asp-controller="Companies" asp-action="Index">Firmalar</a></li>
                    <li><a asp-controller="Messages" asp-action="Index">Mesajlar</a></li>
                    <li><a asp-controller="Feedbacks" asp-action="Index">Geri Bildirimler</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ayarlar <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Languages" asp-action="Index">Diller</a></li>
                            <li><a asp-controller="Occupations" asp-action="Index">Meslekler</a></li>
                            <li><a asp-controller="Skills" asp-action="Index">Yetkinlikler</a></li>
                            <li><a asp-controller="Tags" asp-action="Index">Etiketler</a></li>
                            <li><a asp-controller="Locations" asp-action="Index">Konumlar</a></li>
                            <li><a asp-controller="Users" asp-action="Index">Kullanıcılar</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="Settings" asp-action="Edit">Genel Ayarlar</a></li>
                            <li><a asp-controller="Audits" asp-action="Index">Denetim Günlükleri</a></li>
                        </ul>
                    </li>
                </ul>
               
                <ul class="nav navbar-nav navbar-right">
                   
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@{var user = await userManager.GetUserAsync(User);} @user.FirstName @user.LastName (@User.Identity.Name) <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Manage" asp-action="Index">Profilim</a></li>
                            <li><a href="javascript:document.getElementById('logoutForm').submit();">Çıkış Yap</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>


