
@model Setting
@{
    ViewData["Title"] = "İletişim";
}

<header class="page-header bg-img">
    <div class="container page-name">
        <h1 class="text-center">İletişim</h1>
        <p class="lead text-center">Sorularınız ve geri bildirimleriniz için iletişim formunu kullanabilir veya bizi arayabilirsiniz.</p>
    </div>
</header>
<!-- END Site header -->    
<!-- Main container -->
<main class="container">

    <section>

        
                    <iframe width="100%"  height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src=https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d24908.855683381906!2d29.028956!3d40.989143!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x2d0fcf9b3fb8d79d!2sIT+Training+Center!5e1!3m2!1sen!2str!4v1510916904654"></iframe>


                    <br><br>

                    <div class="row">
                        <div class="col-sm-12 col-md-8">
                            <h4>İletişim Formu</h4>
                            <form asp-action="Contact" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control input-lg" placeholder="İsim">
                                </div>

                                <div class="form-group">
                                    <input name="Email" type="email" class="form-control input-lg" placeholder="E-Mail">
                                </div>
                                <div class="form-group">
                                    <input name="Phone" id="Phone" type="tel" class="form-control input-lg" placeholder="Telefon">
                                </div>

                                <div class="form-group">
                                    <textarea class="form-control" rows="5" placeholder="Mesaj"></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Gönder</button>
                             
                            </form>
                            
                        </div>

                        <div class="col-sm-12 col-md-4">
                            <h4>İletişim</h4>
                            <div class="highlighted-block">
                                <dl class="icon-holder">
                                    <dt><i class="fa fa-map-marker"></i></dt>
                                    <dd>@Model.Address</dd>

                                    <dt><i class="fa fa-phone"></i></dt>
                                    <dd>@Model.Phone</dd>

                                    <dt><i class="fa fa-fax"></i></dt>
                                    <dd>@Model.Fax</dd>

                                    <dt><i class="fa fa-envelope"></i></dt>
                                    <dd>@Model.Email</dd>
                                </dl>
                            </div>

                            <br>

                            <ul class="social-icons size-sm text-center">
                                <li><a class="facebook" href="@Model.Facebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                <li><a class="twitter" href="@Model.Twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                <li><a class="youtube" href="@Model.Youtube" target="_blank"><i class="fa fa-youtube"></i></a></li>
                                <li><a class="linkedin" href="@Model.Linkedin" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                                <li><a class="instagram" href="@Model.Instagram" target="_blank"><i class="fa fa-instagram"></i></a></li>
                            </ul>

                        </div>
                    </div>

                
    </section>


</main>
<!-- END Main container -->