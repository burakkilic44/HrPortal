@model Certificate
@{
    Layout = null;
}

<div class="container">

    <header class="section-header">
        <span>Sertifikalar</span>
        <h2>Sertifika Bilgileri</h2>
    </header>

    <div class="row">

        <div class="col-xs-12">
            <div class="item-block">
                <div class="item-form">

                    <button class="btn btn-danger btn-float btn-remove"><i class="ti-close"></i></button>

                    <div class="row">

                        <div class="col-xs-12 col-sm-12">
                            <div class="form-group">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Sertifika Adı">
                            </div>

                            <div class="form-group">
                                <input asp-for="Issuer" type="text" class="form-control" placeholder="Alındığı Kurum">
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">Alındığı Tarih</span>
                                    <input asp-for="IssueDate" type="text" class="form-control" placeholder="bkz. 2012">
                                    <span class="input-group-addon">Sertifika Dosyası</span>
                                    <input asp-for="CertificateFile" type="file" class="form-control">
                                </div>
                            </div>

                            <div class="col-xs-12 text-center">
                                <br>
                                <button id="btnAdd" type="button" onclick="AddCertificate()" class="btn btn-primary btn-duplicator">Sertifika Ekle</button>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
