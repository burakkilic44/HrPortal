@model LanguageInfo
@{
    Layout = null;
}

<div class="container">

    <header class="section-header">
        <span>Yabancı Diller</span>
        <h2>Yabancı Dil Bilgileri</h2>
    </header>

    <div class="row">

        <div class="col-xs-12">
            <div class="item-block">
                <div class="item-form">

                    <button class="btn btn-danger btn-float btn-remove"><i class="ti-close"></i></button>

                    <div class="row">


                        <div class="col-xs-12 col-sm-12">
                            <div class="form-group col-xs-12 col-sm-6 col-md-3">
                                <select asp-for="LanguageId" class="form-control" asp-items="@ViewBag.Languages">
                                    <option value="">Bir dil seçiniz</option>
                                </select>
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>


                            <div class="form-group col-xs-12 col-sm-6 col-md-3">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-level-up"></i></span>
                                        <input asp-for="SpeakingLevel" class="form-control" value="" placeholder="Konuşma seviyesi">
                                        <span asp-validation-for="SpeakingLevel" class="text-danger"></span>
                                        <span class="input-group-addon"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-12 col-sm-6 col-md-3">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-level-up"></i></span>
                                        <input asp-for="ReadingLevel" class="form-control" value="" placeholder="Okuma Seviyesi">
                                        <span asp-validation-for="ReadingLevel" class="text-danger"></span>
                                        <span class="input-group-addon"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-12 col-sm-6 col-md-3">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-level-up"></i></span>
                                        <input asp-for="WritingLevel" class="form-control" value="" placeholder="Yazma Seviyesi">
                                        <span asp-validation-for="WritingLevel" class="text-danger"></span>
                                        <span class="input-group-addon"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 text-center">
            <br>
            <button type="button" onclick="LanguageInfoCreate()" class="btn btn-primary">Yabancı Dil Ekle</button>
        </div>
    </div>
</div>

