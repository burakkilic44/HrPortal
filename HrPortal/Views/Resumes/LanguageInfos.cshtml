@model LanguageInfo
@{
    Layout = null;
}
<div class="container">

    <header class="section-header">
        <span>Yabancı Diller</span>
        <h2>Yabancı Dil Bilgileri</h2>
    </header>

    <div class="row">

        <div class="col-xs-12">
            <div class="item-block">
                <div class="item-form">

                    <button class="btn btn-danger btn-float btn-remove"><i class="ti-close"></i></button>

                    <div class="row">


                        <div class="col-xs-12 col-sm-12">
                            <div class="form-group">
                                <input asp-for="Language.Name" type="text" class="form-control" placeholder="Bir dil giriniz (Bkz. İngilizce)">
                            </div>


                            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-level-up"></i></span>
                                        <input asp-for="SpeakingLevel" class="form-control" placeholder="Konuşma seviyesi">
                                        <span class="input-group-addon"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-level-up"></i></span>
                                        <input asp-for="ReadingLevel" class="form-control" placeholder="Okuma Seviyesi">
                                        <span class="input-group-addon"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-addon"><i class="fa fa-level-up"></i></span>
                                        <input asp-for="WritingLevel" class="form-control" placeholder="Yazma Seviyesi">
                                        <span class="input-group-addon"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 text-center">
            <br>
            <button type="button" id="btnAdd" onclick="AddLanguageInfo" class="btn btn-primary btn-duplicator">Yabancı Dil Ekle</button>
        </div>
    </div>
</div>

