@model IEnumerable<Skill>
@{
    Layout = null;
}

<div class="container">
    <header class="section-header">
        <span>Uzmanlık Alanları</span>
        <h2>Yetenekler</h2>
    </header>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="item-block">
                    <div class="item-form">
                        <button type="button" class="btn btn-danger btn-float btn-remove" onclick="SkillDelete()"><i class="ti-close"></i></button>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <input asp-for="@item.Name" type="text" class="form-control" placeholder="Yetenek, bkz. HTML">
                                    <span asp-validation-for="@item.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input asp-for="@item.Level" type="text" class="form-control" value="" placeholder="Yetenek seviyesi, bkz. 90">
                                        <span asp-validation-for="@item.Level" class="text-danger"></span>
                                        <span class="input-group-addon">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 text-center">
                <br>
                <button type="button" asp-route-id="@item.Id" onclick="SkillEdit()" class="btn btn-primary">Yetenek Düzenle</button>
            </div>
        </div>
    }
</div>
