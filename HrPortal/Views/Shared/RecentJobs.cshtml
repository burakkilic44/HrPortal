@{
}
<section class="bg-alt">
    <div class="container">
        <header class="section-header">

            <h2>Güncel İlanlar</h2>
            <p>Son yayınlanan güncel ilanlar</p>
        </header>

        <div class="row item-blocks-condensed">
            @foreach (var Jobitem in (IEnumerable<Job>)ViewBag.jobs)
            {
                <div class="col-xs-12">
                    <a class="item-block" asp-controller="Jobs" asp-action="Details" asp-route-id="@Jobitem.Id">
                        <header>
                            @if (String.IsNullOrEmpty(Jobitem.Company.Photo))
                            {

                                <img class="logo" src="/uploads/background.jpg" />

                            }
                            else
                            {
                                <img src="/uploads/jobs/@Jobitem.Company.Photo" alt="@Jobitem.Company.Name">

                            }

                         <div class="hgroup">
                                <h4>@Jobitem.Title</h4>
                                <h5>@Jobitem.Company.Name</h5>
                            </div>
                            <div class="header-meta">
                                <span class="location">@if (Jobitem.JobLocations != null)
                                {
                                    foreach(var location in Jobitem.JobLocations.Select(i => i.Location.Name).ToList())
                                    {
                                        @location
                                        <text> </text>

                                    }

                                }
                                </span>
                                <span>@Jobitem.WorkingStyle.GetDisplayName()</span>
                            </div>
                        </header>
                    </a>
                </div>



            }
            <!-- Job item -->
       
            <!-- END Job item -->
            <!-- Job item -->
          

        </div>

        <br><br>
        <p class="text-center"><a class="btn btn-info" asp-controller="Jobs" asp-action="Index">Bütün ilanlara gözat</a></p>
    </div>
</section>
