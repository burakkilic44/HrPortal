<style>
    @@media only screen and (min-width: 960px) {
    .LocationSearch {
        width: 300px;
    }
}

@@media only screen and (min-width: 960px) {
    .header-job-search {
        margin-left: 150px;
    }
}

@@media only screen and (min-width: 960px) {
    .input-location {
        width: 31% !important;
    }
}
</style>
<header class="site-header size-lg text-center" style="background-image: url(http://www.sercantogrul.com/wp-content/uploads/2016/06/kariyer_bg.jpg)">
    <div class="container">
        <div class="col-xs-12">
            <br><br>
            <h2>Şu an sizlere <mark>@ViewBag.JobCount</mark> iş ilanı sunuyoruz!</h2>
            <h5 class="font-alt">Kariyerinize Bir + Daha</h5>
            <br><br><br>
            <form class="header-job-search" method="get">
                <div class="input-keyword">
                    <input type="text" class="form-control" placeholder="Meslek, yetkinlik, veya şirket adı" name="keyWords">
                </div>

                <div class="input-location">
                    <div class="LocationSearch">
                        <select class="form-control" name="LocationId">
                            <option value="">Konum Seçiniz</option>
                            @foreach (var item in (IEnumerable<Location>)ViewBag.Locations)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        </select>
                    </div>
                </div>

                <div class="btn-search">
                    <button class="btn btn-primary" type="submit" asp-controller="Jobs" asp-action="Index">İş İlanı Ara</button>
                    <a asp-controller="Jobs" asp-action="Index">Gelişmiş Arama</a>
                </div>
            </form>
        </div>

    </div>
</header>